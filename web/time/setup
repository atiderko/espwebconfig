  <script type="text/javascript">
    window.onload=function(){vswe(false); vsw(false, 'dnd');};
    function vswe(e){
      vsw(e, 'exp');
      vsw(!e, 'noexp');
    }
  </script>
  <script>jsons = [ ["/time/config.json", "fillTimeConfig"] ];</script>
  <script src="/js/postload.js"></script>
  <script type="text/javascript">
    function fillTimeConfig(data, url) {
      document.getElementById("manually").checked = data["time"]["manually"];
      vsw(data["time"]["manually"]);
      document.getElementById("dnd_enabled").checked = data["time"]["dnd_enabled"];
      vsw_dnd(data["time"]["dnd_enabled"]);
      document.getElementById("current").innerText = data["time"]["current"];
      ["dnd_from","dnd_to","mdate", "mtime"
      ].forEach(function(id,idy,arr) {
        document.getElementById(id).value = data["time"][id];
      });
    }
  </script>
