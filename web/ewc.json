{
    "version": "1.0.1",
    "elements": [
      {
        "name": "style_inputs",
        "type": "ACStyle",
        "value": "label+input,label+select{position:sticky;left:140px;width:240px!important;box-sizing:border-box;}"
      },
      {
        "name": "style_hints",
        "type": "ACStyle",
        "value": "div[id^=hint]{text-align:right;color:#B2BABB;padding:0em 1em 1em 1em;font-size:0.8em}"
      },
      {
        "name": "check_interval",
        "type": "ACInput",
        "value": "1",
        "label": "Interval:",
        "placeholder": "count hours",
        "hint": "Default interval between checks if not empty or dry. Default: <b>1</b> hour",
        "post": "AC_Tag_None"
      },
      {
        "name": "cycle1enabled",
        "type": "ACCheckBox",
        "value": "cycle1enabled",
        "label": "Cycle 1",
        "checked": true
      },
      {
        "name": "cycle2enabled",
        "type": "ACCheckBox",
        "value": "cycle2enabled",
        "label": "Cycle 2",
        "checked": true
      },
      {
        "name": "mail_receiver",
        "type": "ACInput",
        "value": "bewesserung.info@tiderko.de",
        "label": "Receiver:",
        "placeholder": "bewesserung.info@tiderko.de"
      },
      {
        "name": "mail_server",
        "type": "ACInput",
        "value": "mx2fbd.netcup.net",
        "label": "SMTP server:",
        "placeholder": "mx2fbd.netcup.net"
      },
      {
        "name": "mail_port",
        "type": "ACInput",
        "value": "25",
        "label": "Port:",
        "placeholder": "25"
      },
      {
        "name": "mail_sender",
        "type": "ACInput",
        "value": "bewesserung.balkon@tiderko.de",
        "label": "Sender:",
        "placeholder": "bewesserung.balkon@tiderko.de"
      },
      {
        "name": "mail_password",
        "type": "ACInput",
        "value": "alex!dennis",
        "label": "Password:",
        "placeholder": "password"
      },
      {
        "name": "mail_on_warning",
        "type": "ACCheckBox",
        "value": "mail_on_warning",
        "label": "Send E-Mail on warnings, e.g. canister is empty",
        "checked": true
      },
      {
        "name": "mail_on_change",
        "type": "ACCheckBox",
        "value": "mail_on_change",
        "label": "Send E-Mail on status changes",
        "checked": true
      },
      {
        "name": "mail_on_event",
        "type": "ACCheckBox",
        "value": "mail_on_event",
        "label": "Send E-Mail on each event",
        "checked": false
      },
      {
        "name": "moisture_upper",
        "type": "ACInput",
        "value": "50",
        "label": "Upper level:",
        "placeholder": "percent",
        "post": "AC_Tag_None"
      },
      {
        "name": "hint_moisture_upper",
        "type": "ACText",
        "value": "After this level reached wait until it is below lover level. Default: <b>50</b>%"
      },
      {
        "name": "moisture_lower",
        "type": "ACInput",
        "value": "20",
        "label": "Lower level:",
        "placeholder": "percent",
        "post": "AC_Tag_None"
      },
      {
        "name": "hint_moisture_lower",
        "type": "ACText",
        "value": "Lower moisture level. Default: <b>20</b>%"
      },
      {
        "name": "server",
        "type": "ACInput",
        "value": "",
        "label": "Address:",
        "placeholder": "MQTT broker IP address"
      },
      {
        "name": "port",
        "type": "ACInput",
        "value": "1883",
        "label": "Port:",
        "placeholder": "MQTT broker port"
      },
      {
        "name": "base_topic",
        "type": "ACInput",
        "value": "/bbs",
        "label": "Base topic:",
        "placeholder": "MQTT base topic",
        "post": "AC_Tag_None"
      },
      {
        "name": "hint",
        "type": "ACText",
        "value": "Optional. The default value is <b>/bbs</b>"
      },
      {
        "name": "newline",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "user",
        "type": "ACInput",
        "label": "Benutzer:"
      },
      {
        "name": "password",
        "type": "ACInput",
        "label": "Passwort:"
      },
      {
        "name": "pump_duration_max",
        "type": "ACInput",
        "value": "120",
        "label": "Duration (max):",
        "placeholder": "seconds",
        "post": "AC_Tag_None"
      },
      {
        "name": "hint_pump_duration_max",
        "type": "ACText",
        "value": "The maximal pump duration. Default: <b>120</b> sec"
      },
      {
        "name": "pump_duration_wo_floater",
        "type": "ACInput",
        "value": "4",
        "label": "Duration w/o floater:",
        "placeholder": "seconds",
        "post": "AC_Tag_None"
      },
      {
        "name": "hint_pump_duration_wo_floater",
        "type": "ACText",
        "value": "The pump duration without floater. Default: <b>4</b> sec"
      },
      {
        "name": "pump_sleep",
        "type": "ACInput",
        "value": "120",
        "label": "Sleep:",
        "placeholder": "seconds",
        "post": "AC_Tag_None"
      },
      {
        "name": "hint_pump_sleep",
        "type": "ACText",
        "value": "Time between wattering. Default: <b>120</b> sec"
      }
    ]
}